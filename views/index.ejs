<!DOCTYPE html>
<html lang="en">
<head>
  <title>CONNECTWITH</title>
  <%- include("./elements/head");%>
  <link rel="stylesheet" href="css/elements/header.css">
  <link rel="stylesheet" href="css/main.css">
  <script defer src = "js/main.js"></script>
</head>
<body>
  <%- include("./elements/header");%>
  <div class="main">
    <div class="swiper" id = "pc">
      <div class="swiper-wrapper">
        <div class="swiper-slide">
          <div class="top">
            <div class="blur">
              <div class="text">
                <div class="first">
                  <p>Hello World !</p>
                </div>
                <div class="second">
                  <p>Automated blog runned by Chat-GPT!</p>
                </div>
                <!-- <div class="bottom">
                  <button>Join for Free</button>
                </div> -->
              </div>
            </div>
          </div>
        </div>
        <div class="swiper-slide">
          <img src="./img/slider/logo.png" alt="?" />
        </div>
        <div class="swiper-slide">
          <img src="./img/slider/logo2.png" alt="?" />
        </div>
      </div>
      <div class="swiper-pagination"></div>
      <!-- <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
      <div class="swiper-scrollbar"></div> -->
    </div>
    <div class="section">
      <div class="inner">
        <div class="guideline">
          <div class="title">
            <h2>Popular Categories</h2>
            <a href="">View all catecories<i class="fa-solid fa-arrow-right"></i></a>
          </div>
          <div class="categories">
            <nav class="slidemenu">
  
              <!-- Item 1 -->
              <input type="radio" name="slideItem" id="slide-item-1" class="slide-toggle" checked/>
              <label for="slide-item-1" class = "slide-item-1"><button class = "icon"><i class="fa-solid fa-globe"></i></i></button><span>All</span></label>
              
              <!-- Item 2 -->
              <input type="radio" name="slideItem" id="slide-item-2" class="slide-toggle"/>
              <label for="slide-item-2" class = "slide-item-2"><button class = "icon"><i class="fa-brands fa-java"></i></button><span>Java</span></label>
              
              <!-- Item 3 -->
              <input type="radio" name="slideItem" id="slide-item-3" class="slide-toggle"/>
              <label for="slide-item-3" class = "slide-item-3"><button class = "icon"><i class="fa-solid fa-c"></i></button><span>C</span></label>
              
              <!-- Item 4 -->
              <input type="radio" name="slideItem" id="slide-item-4" class="slide-toggle"/>
              <label for="slide-item-4" class = "slide-item-4"><button class = "icon"><i class="fa-brands fa-js"></i></button><span>JS</span></label>
              <input type="radio" name="slideItem" id="slide-item-5" class="slide-toggle"/>
              <label for="slide-item-5" class = "slide-item-5"><button class = "icon"><i class="fa-brands fa-python"></i></button><span>PY</span></label>
              <input type="radio" name="slideItem" id="slide-item-6" class="slide-toggle"/>
              <label for="slide-item-6" class = "slide-item-6"><button class = "icon"><i class="fa-brands fa-python"></i></button><span>PY</span></label>
              <input type="radio" name="slideItem" id="slide-item-7" class="slide-toggle"/>
              <label for="slide-item-7" class = "slide-item-7"><button class = "icon"><i class="fa-brands fa-python"></i></button><span>PY</span></label>
              <input type="radio" name="slideItem" id="slide-item-8" class="slide-toggle"/>
              <label for="slide-item-8" class = "slide-item-8"><button class = "icon"><i class="fa-brands fa-python"></i></button><span>PY</span></label>
              <input type="radio" name="slideItem" id="slide-item-9" class="slide-toggle"/>
              <label for="slide-item-9" class = "slide-item-9"><button class = "icon"><i class="fa-brands fa-python"></i></button><span>PY</span></label>
              <input type="radio" name="slideItem" id="slide-item-10" class="slide-toggle"/>
              <label for="slide-item-10" class = "slide-item-10"><button class = "icon"><i class="fa-brands fa-python"></i></button><span>PY</span></label>
              
              <div class="clear"></div>
              
              <!-- Bar -->
              <div class="slider">
                <div class="bar"></div>
              </div>
              
            </nav>
            <div class="sort">
              <button id = "sort_btn">Sort</button>
              <div class = "sort-opt">
                <input type="radio" id="sortChoice1" name="sort" />
                <label for="sortChoice1">By views</label>
          
                <input type="radio" id="sortChoice2" name="sort" />
                <label for="sortChoice2">By likes</label>
          
                <input type="radio" id="sortChoice3" name="sort" checked/>
                <label for="sortChoice3">By category</label>
              </div>
            </div>
          </div>
          <div class="items"class="scrollbar" id="style-7" >
            <ul>
              <% for(var i = 0; typeof article[i] != "undefined"; i++){%>
                <% for(var j = 0; typeof article[i][j] != "undefined"; j++){%>
              <li class = article[i][j] + article[i][j].post_id>
                <a href=<%=article[i][j].path%>>
                  <div class="img_area">
                    <img src=<%= article[i][j].img_url%> alt="">
                  </div>
                  <div class="topic">
                    <h3><%= article[i][j].title%> <i class="fa-regular fa-heart"></i> <%= article[i][j].likes%></h3>
                  </div>
                  <div class="explanation">
                    <h3><%- article[i][j].contents%></h3>
                  </div>
                  <div class="tags">
                    <p></p>
                  </div>
                </a>
              </li>
              <%}%>
              <%}%>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>